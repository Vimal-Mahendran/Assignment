#include <iostream>
#include <cmath>

int main() {
    float floatingNumber;

    std::cout << "Enter a floating-point number: ";
    std::cin >> floatingNumber;

    std::cout << "Original number: " << floatingNumber << std::endl;

    std::cout << "Rounded down: " << std::floor(floatingNumber) << std::endl;
    std::cout << "Rounded up: " << std::ceil(floatingNumber) << std::endl;

    return 0;
}
